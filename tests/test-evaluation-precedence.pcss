	// Expected: -5.7
	left: -2*(3*$PAD + $PAD)
.network[data-network="linkedin"]:
	// Expected: -8.57
	left: -3*(3*$PAD + $PAD)
.network[data-network="pinterest"]:
	// Expected: -11.42
	left: -4*(3*$PAD + $PAD)
.network[data-network="googleplus"]:
	// Expected: -14.28
	left: -5*(3*$PAD + $PAD)
